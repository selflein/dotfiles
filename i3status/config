# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

py3status {
	#align = 'left'
   	markup = 'pango'
   	#min_width = 20
   	#separator = True
   	#separator_block_width = 9

    	background = '#000000'
   	border = '#000000'
   	border_bottom = 1
   	border_left = 1
   	border_right = 1
   	border_top = 1

	color_bad = '#ffffff'
	color_degraded = '#ffffff'
	

   	#min_length = 15
   	position = 'right'
}

order += "xrandr"
order += "volume_status"
order += "bluetooth"
order += "wifi"
order += "battery_level"
order += "time"

wifi {
        blocks = " "
	format = "[{icon}]"
	on_click 1 = "exec sh nmtui"
	
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip (%speed)"
        format_down = ""
}

battery_level {
	battery_id = "all"
        format = "{icon} {percent}%"
	charging_character = ""
	blocks = ""
}

time {
        format = "%d.%m.%Y    %H:%M"
}

volume_status {
	command = "pactl"
	button_mute = "3"
	format = " {percentage}%"
	format_muted = ""
	max_volume = "100"
	on_click 1 = "exec pavucontrol"
}

xrandr {
	hide_if_single_combination = True
	DP2_pos = "right-of eDP1"
	eDP1_primary = True 
	DP2_workspaces = "1,2,3"
}

bluetooth {
	format = "[ {format_device}]"
	format_device = "[{name}]"
	color_bad = "hidden"
}
