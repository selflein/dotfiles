[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 3

label-open = 
label-open-foreground = ${colors.foreground}
label-close =  Cancel
label-close-foreground = ${colors.secondary}
label-separator = " "
label-separator-foreground = #0000

menu-0-0 =  Suspend
menu-0-0-exec = systemctl suspend
menu-0-1 =  Reboot
menu-0-1-exec = reboot
menu-0-2 =  Poweroff
menu-0-2-exec = sudo poweroff

