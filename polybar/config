[colors]
background = #99222222
background-alt = #222
foreground = #dfdfdf
foreground-alt = #dfdfdf
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
warning = #daa520
green = #99ff66

[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 45
;offset-x = 1%
;offset-y = 1%
radius = 5.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 5
border-color = #00000000

padding-left = 2
padding-right = 5

module-margin-left = 1
module-margin-right = 5

font-0 = "SF Pro Display:pixelsize=20;5"
font-1 = "Material Icons:pixelsize=25;8"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=20;5"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=20;5"
font-4 = "Font Awesome 5 Brands:pixelsize=20;5"

modules-left = i3
;modules-center = xwindow
modules-right = pulseaudio wlan eth battery date powermenu

tray-position = center
tray-padding = 2
tray-background = ${colors.background}

wm-restack = i3

;override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

