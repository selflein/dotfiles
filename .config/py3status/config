
general {
	output_format = "i3bar"
    interval = 1
	separator = false
    color = '#FFFFFF'
    color_good = '#FFFFFF'
    color_bad = '#FFFFFF'
    color_degraded = '#FFFFFF'
}

order += "volume_status"
order += "battery all"
order += "tztime local"

wireless _first_ {
    format_up = ""
    format_down = ""
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = " "
    format_down = ""
}

battery all {
    format = "%status %percentage"
	status_chr = ""
	status_bat = ""
	status_full = ""
    status_unk = ""
	low_threshold = 20
	format_down = ""
	hide_seconds = true
	integer_battery_capacity = true
}

tztime local {
    format = "%d.%m.%Y, %H:%M"
}

load {
    format = "%1min"
}

disk "/" {
    format = " %avail"
}

volume_status {
    format = " {percentage}%"
    format_muted = ""
    button_up = 4
    button_down = 5
    button_mute = 2
    on_click 1 = "exec pavucontrol"
}

