font pango:Fira Sans 10, pango: Font Awesome 10
xwayland force
focus_follows_mouse no
focus_on_window_activation urgent
hide_edge_borders smart
smart_gaps on
default_border pixel 2

set $mod Mod4
set $lock 'swaylock -f -c 000000'

set $left h
set $down j
set $up k
set $right l

set $term alacritty

# Application Launcher
#set $menu "wofi --dmenu -I -m -i"
set $menu "rofi -combi-modi drun,window,run -show combi -modi combi"

### Idle configuration
exec swayidle -w \
        timeout 300 $lock \
        timeout 600 'swaymsg "output * dpms off"' \
        resume 'swaymsg "output * dpms on"' \
        before-sleep $lock


### Key bindings
    floating_modifier $mod normal

    bindsym $mod+Shift+q kill


    # reload the configuration file
    bindsym $mod+Shift+r reload


    bindsym $mod+d exec $menu
    bindsym $mod+Return exec $term
    bindsym $mod+Tab exec "rofi -show window"

    # Layout stuff:
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # move focus to the parent container
    bindsym $mod+a focus parent

    # Scratchpad
    bindsym $mod+Shift+minus move scratchpad
    bindsym $mod+minus scratchpad show


# Window rules
    for_window [shell="xwayland"] title_format "[X] %title "
    for_window [class="^.*"] border pixel 4
    for_window [class="Pavucontrol"] floating enable
    for_window [window_role="pop-up"] floating enable
    for_window [window_role="task_dialog"] floating enable
    for_window [class="Blueman-manager"] floating enable

# Includes
    # Workspace keybind
    include workspace_keybinds.conf

    # bar
    include bars/waybar

    # client customization
    include visual.conf

    # monitor outputs
    include output.conf

    # peripheral inputs
    include input.conf

    # scripts to be exectuted at startup
    include autostart

    # include /etc/sway/config.d/*

exec_always pkill kanshi; exec kanshi
exec_always autotiling
exec_always ~/.config/waybar/waybar.sh
